<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<link href="../Content/app.css" rel="stylesheet" type="text/css">

<br>

<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <br>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Course</label>
                    <input type="text" class="form-control"
                    id="courseTextField"
                    placeholder="Enter the Course"
                    name="Course" 
                    value="<%= Task.Course %>"
                    required>
                </div>

                <br>

                <div class="form-group">
                    <label for="authorTextField">Task</label>
                    <input type="text" class="form-control"
                    id="taskTextField"
                    placeholder="Enter the Task"
                    name="Task" 
                    value="<%= Task.Task %>"
                    required>
                </div>

                <br>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the task"
                    name="Description" 
                    required>
                    <%= Task.Description %>
                    </textarea>
                </div>

                <br>

                <div class="form-group">
                    <label for="priceTextField">Deadline</label>
                    <input type="text" class="form-control"
                    id="deadlineTextField"
                    placeholder="Enter the Deadline"
                    name="Deadline" 
                    value="<%= Task.Deadline %>"
                    required>
                </div>

                <br>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/tracklist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
    <br>
    <br>
    <br>
    <br>

</div>

<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>